{% extends('base.html.twig') %}

{% block title %}  Search By City | AdeoWeb What To Wear Today &trade; - Coding Challenge by Amr Farouq {% endblock %}

{% block body %}
    <!-- Main -->
    <section id="main" class="wrapper style1">
        <header class="major">
            <h2>AdeoWeb - What To Wear Today? &trade; | Search By City</h2>
            <h3><span><img src="{{ asset('init/images/logo.png') }}" alt="logo"/></span></h3>
        </header>

        <div class="container">

            <!-- Content -->
            <section id="content">
                <!-- Form -->
                <header class="major">
                    <h3>Please Click On The City To See Related Products</h3>
                    <h4>{{ citiesCount }} Cities Found</h4>
                    <input type="text" id="myInput" onkeyup="searchFunction()" placeholder="Search for Lithuanian Cities..."
                           title="Type in a name">
                    <ul id="myUL">
                        {% for city in cities %}

                            <li><a href="{{ path('cityNameRoute', {'city': city.code}) }}">{{ city.name }}</a></li>

                        {% endfor %}
                    </ul>
                </header>
            </section>

        </div>
    </section>


{% endblock %}